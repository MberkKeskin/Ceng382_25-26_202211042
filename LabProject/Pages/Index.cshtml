@page
@model LabProject.Pages.IndexModel
@{
    ViewData["Title"] = "Class Management";
}

<div class="container mt-4">
    <div class="row">
        <!-- Form Section -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>@(Model.EditId.HasValue ? "Edit Class" : "Add New Class")</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="NewClass.Id" />
                        <div class="mb-3">
                            <label class="form-label">Class Name</label>
                            <input asp-for="NewClass.ClassName" class="form-control" />
                            <span asp-validation-for="NewClass.ClassName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Student Count</label>
                            <input asp-for="NewClass.StudentCount" class="form-control" />
                            <span asp-validation-for="NewClass.StudentCount" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea asp-for="NewClass.Description" class="form-control"></textarea>
                            <span asp-validation-for="NewClass.Description" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            @if (Model.EditId.HasValue)
                            {
                                <button type="submit" class="btn btn-warning" asp-page-handler="Edit">Update</button>
                                <button type="submit" class="btn btn-secondary" asp-page-handler="Cancel">Cancel</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary" asp-page-handler="Add">Add Class</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3>Class List</h3>
                </div>
                <div class="card-body">
                    <form method="get" class="mb-3 d-flex gap-2">
                        <input name="filter" value="@Model.Filter" class="form-control" placeholder="Search by class name..." />
                        <button class="btn btn-outline-primary" type="submit">Filter</button>
                    </form>

                    <table class="table table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Class Name</th>
                                <th>Student Count</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DisplayClassList)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.ClassName</td>
                                    <td>@item.StudentCount</td>
                                    <td>@item.Description</td>
                                   <td>
                                     <a asp-page="./Index" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>


                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- Pagination -->
                    <nav>
                        <ul class="pagination">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                    <a class="page-link" href="?pageNumber=@i&filter=@Model.Filter">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
