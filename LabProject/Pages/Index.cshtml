@page "{id?}"
@model LabProject.Pages.IndexModel

@{
    ViewData["Title"] = "Sınıf Yönetimi";
}

<div class="container mt-5">
    <div class="row">
        <!-- Sınıf Ekleme Formu -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center bg-primary text-white">
                    <h4>@(Model.EditId.HasValue ? "Sınıfı Düzenle" : "Yeni Sınıf Ekle")</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="NewClass.Id" />
                        
                        <div class="form-group">
                            <label for="ClassName" class="form-label">Sınıf Adı</label>
                            <input type="text" class="form-control" asp-for="NewClass.ClassName" />
                            <span class="text-danger" asp-validation-for="NewClass.ClassName"></span>
                        </div>

                        <div class="form-group">
                            <label for="StudentCount" class="form-label">Öğrenci Sayısı</label>
                            <input type="number" class="form-control" asp-for="NewClass.StudentCount" />
                            <span class="text-danger" asp-validation-for="NewClass.StudentCount"></span>
                        </div>

                        <div class="form-group">
                            <label for="Description" class="form-label">Açıklama</label>
                            <textarea class="form-control" asp-for="NewClass.Description"></textarea>
                            <span class="text-danger" asp-validation-for="NewClass.Description"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            @if (Model.EditId.HasValue)
                            {
                                <button type="submit" class="btn btn-warning" asp-page-handler="Edit">Güncelle</button>
                                <a asp-page="Index" class="btn btn-outline-secondary">İptal</a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary" asp-page-handler="Add">Sınıf Ekle</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sınıf Listesi -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center bg-success text-white">
                    <h4>Sınıf Listesi</h4>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Sınıf Adı</th>
                                <th>Öğrenci Sayısı</th>
                                <th>Açıklama</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DisplayClassList)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.ClassName</td>
                                    <td>@item.StudentCount</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a asp-page="Index" asp-route-id="@item.Id" class="btn btn-info btn-sm">Düzenle</a>
                                        <form method="post" class="d-inline">
                                            <button type="submit" asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
